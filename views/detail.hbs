<div class="row">
    <div class="bg-light col-12">
        <p class="col-12 text-center fw-b h2 bg-secondary mb-3 mt-3 text-light p-1">{{blog.title}}</p>
        <p class="col-12 text-left fw-b h5 mb-3 p-1">{{blog.content}}</p>
    </div>
</div>
<div class="mt-3">
    {{#each comment}}
    <div class="row m-1">
        <div class="bg-primary col-12">
            <p class="col-12 text-left fw-b h5 mb-3 p-1 text-light text-break">{{content}}</p>
        </div>
    </div>
    {{/each}}
</div>
<form action="/comment/add" method="POST">
    <div class="row">
        <label for="comment" class="col-3 text-center fw-b h3 mt-3">Comment:</label>
        <input type="text" id="comment" name="comment" placeholder="Input comment" class="col-8 form-control mt-3">
        <input type="hidden" name="blog_id" value="{{blog.id}}">
    </div>
    <div class="text-center mt-3">
        <input type="submit" class="btn btn-primary btn-lg" value="Add Comment">
    </div>
</form>